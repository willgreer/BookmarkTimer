{
	"name": "Bookmark Reminder ‚è±",
	"description": "Reminds you to return to your bookmark at a later time--for your nightly bookmark binges üòµ go to sleep! come back tomorrow!",
	"version": "1.0",
	"permissions": [
		"<all_urls>",
		"bookmarks",
		"storage",
		"contextMenus",
		"unlimitedStorage",
		"tabs",
		"activeTab"
	],

	"manifest_version": 2,
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

	"browser_action": {
		"default_icon": {
			"16": "assets/time-16px.png",
			"24": "assets/time-24px.png",
			"32": "assets/time-32px.png"
		},
		"default_title": "Bookmark Reminder",
		"default_popup": "/popup/popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			]
		}
	],
	"background": {
		"persistent": true,
		"scripts": [
			"background.js"
		]
	}
}